<!doctype html>
<html>
<head>
	<title>Concarneau</title>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
    <link rel="apple-touch-icon" href="/content/images/tiles/base-game/RCr.png">
    <link rel="apple-touch-startup-image" href="/content/images/ui/bg.jpg">
    <link rel="shortcut icon" href="/content/images/ui/favicon.ico" type="image/x-icon">
	<link rel="icon" href="/content/images/ui/favicon.ico" type="image/x-icon">
	<link rel="stylesheet" href="/content/css/bootstrap.3.0.2.min.css">
	<style>
		body { padding-top: 40px; word-wrap: break-word; }
		.jumbotron { font-size: 14px; }
		.jumbotron h1 { font-size: 36px; }
		
        @media (min-width: 768px) {
            body { padding-top: 80px; }
        }
        
		.fa-link {
			top: 4px;
			position: relative;
			width: 36px;
			height: 36px;
		}
		
		.fa-user, .fa-facebook, .fa-twitter, .fa-google {
			top: 4px;
			position: relative;
			width: 24px;
			height: 24px;
		}
	</style>
</head>
<body background="/content/images/ui/bg.jpg">
<%- include ("../content/images/ui/icons.svg") %>
<div class="container">
<div class="jumbotron">
	<div class="page-header text-center">
		<h1><svg class="fa-link"><use xlink:href="#fa-link"></use></svg> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
		<a href="/game" class="btn btn-default btn-sm">Games</a>
	</div>
	<div class="row">
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><svg class="fa-user"><use xlink:href="#fa-user"></use></svg> Local</h3>

				<% if (user.local.email) { %>
					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>email</strong>: <%= user.local.email %><br>
					</p>

					<a href="/unlink/local" class="btn btn-default">Unlink</a>
				<% } else { %>
					<a href="/connect/local" class="btn btn-default">Connect Local</a>
				<% } %>

			</div>
		</div>
		<!-- FACEBOOK INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><svg class="fa-facebook" fill="#428bca"><use xlink:href="#fa-facebook"></use></svg> Facebook</h3>

				<!-- check if the user has this token (is the user authenticated with this social account) -->
				<% if (user.facebook.token) { %>
					<p>
						<strong>id</strong>: <%= user.facebook.id %><br>
						<strong>email</strong>: <%= user.facebook.email %><br>
						<strong>name</strong>: <%= user.facebook.name %><br>
					</p>

					<a href="/unlink/facebook" class="btn btn-primary">Unlink</a>
				<% } else { %>
					<a href="/connect/facebook" class="btn btn-primary">Connect Facebook</a>
				<% } %>

			</div>
		</div>
	</div>
	<div class="row">
		<!-- TWITTER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-info"><svg class="fa-twitter" fill="#3a87ad"><use xlink:href="#fa-twitter"></use></svg> Twitter</h3>

				<% if (user.twitter.token) { %>
					<p>
						<strong>id</strong>: <%= user.twitter.id %><br>
						<strong>display name</strong>: <%= user.twitter.displayName %><br>
						<strong>username</strong>: <%= user.twitter.username %>
					</p>

					<a href="/unlink/twitter" class="btn btn-info">Unlink</a>
				<% } else { %>
					<a href="/connect/twitter" class="btn btn-info">Connect Twitter</a>
				<% } %>

			</div>
		</div>
		<!-- GOOGLE INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-danger"><svg class="fa-google" fill="#4285F4"><use xlink:href="#fa-google"></use></svg> Google+</h3>

				<% if (user.google.token) { %>
					<p>
						<strong>id</strong>: <%= user.google.id %><br>
						<strong>email</strong>: <%= user.google.email %><br>
						<strong>name</strong>: <%= user.google.name %>
					</p>

					<a href="/unlink/google" class="btn btn-danger">Unlink</a>
				<% } else { %>
					<a href="/connect/google" class="btn btn-danger">Connect Google</a>
				<% } %>

			</div>
		</div>
	</div>
</div>
</div>
<script src="/content/js/standalone.js"></script>
</body>
</html>
